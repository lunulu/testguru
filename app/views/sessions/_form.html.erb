<%= form_with url: sessions_path, local: true do |form| %>
  <%= render 'shared/flashes' %>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </p>

  <p><%= form.submit 'Login' %></p>
<% end %>
