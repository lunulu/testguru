<div class="col col-md-8 mt-3">
  <div class="card">
    <div class="card-body text-center">
      <p><%= t('.id', id: @question.id) %></p>
      <p><%= t('.body', body: @question.body) %></p>

      <%= link_to t('.edit'), edit_admin_question_path(@question), class: 'btn btn-warning w-25' %>
      <%= link_to t('.delete'), admin_question_path(@question), method: :delete, data: {confirm: t('.confirm')}, class: 'btn btn-danger w-25' %>


      <h3 class="mt-3"><%= t('.answers') %></h3>



      <ol class="list-group list-group-numbered">
        <%= render @question.answers %>
      </ol>



      <%= link_to t('.new_answer'), new_admin_question_answer_path(@question), class: 'btn btn-warning mt-3' %>
    </div>
  </div>
</div>

<p class="text-center mt-3">
  <%= link_to t('.back'), admin_test_path(@question.test), class: 'btn btn-primary' %>
</p>
