<%= form_with model: [:admin, @test, @question], local: true do |form| %>
  <%= render 'shared/errors', resource: @question %>

  <div class="form-group">
    <p class="form-floating">
      <%= form.text_field :body, class: 'form-control', placeholder: "Body" %>
      <%= form.label :body %>
    </p>

    <p class="text-center"><%= form.submit class: 'btn btn-warning' %></p>
  </div>
<% end %>
