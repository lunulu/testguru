<h2><%= t('.header') %></h2>

<p><%= link_to t('.new_test'), new_admin_test_path %></p>

<% if Test.all.present? %>
  <table>
    <tr>
      <th><%= t('.title') %></th>
      <th><%= t('.level') %></th>
      <th><%= t('.questions') %></th>
      <th colspan="3"><%= t('.actions') %></th>
    </tr>

    <%= render @tests %>
<% else %>
  <p><%= t('.no_tests') %></p>
<% end %>
</table>
