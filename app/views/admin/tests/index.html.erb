<div class="col col-md-8">
  <div class="card text-center">
    <h2 class="card-header"><%= t('.header') %></h2>

    <div class="card-body">

      <% if Test.all.present? %>
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th class="sort-by-title pointer">
                <%= t('.title') %>
                <%= octicon 'arrow-up', class: 'text-success hide' %>
                <%= octicon 'arrow-down', class: 'text-success hide' %>
              </th>
              <th><%= t('.level') %></th>
              <th><%= t('.questions') %></th>
              <th colspan="3"><%= t('.actions') %></th>
            </tr>
          </thead>

          <tbody class="table-group-divider">
            <%= render @tests %>
          </tbody>
      <% else %>
        <p><%= t('.no_tests') %></p>
      <% end %>
      </table>

      <%= link_to t('.new_test'), new_admin_test_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
