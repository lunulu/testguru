<div class="col col-md-8">
  <div class="card text-center">
    <h2 class="card-header"><%= t('.header') %></h2>

    <div class="card-body">

      <% if Test.all.present? %>
        <table class="table table-hover align-middle">
          <thead>
          <tr>
            <th><%= t('.question_body') %></th>
            <th><%= t('.user_email') %></th>
            <th><%= t('.links') %></th>
            <th><%= t('.actions') %></th>
          </tr>
          </thead>

          <tbody class="table-group-divider">
          <%= render @gists %>
          </tbody>
      <% else %>
        <p><%= t('.no_gists') %></p>
      <% end %>
      </table>
    </div>
  </div>
</div>
