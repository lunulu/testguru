<div class="col col-md-6">
  <div class="card text-center">
    <h2 class="card-header"><%= t('.header') %></h2>

    <div class="card-body">
      <% if Test.all.present? %>
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th><%= t('.title') %></th>
              <th><%= t('.level') %></th>
              <th><%= t('.questions') %></th>
              <th><%= t('.actions') %></th>
            </tr>
          </thead>

          <tbody class="table-group-divider">
            <%= render @tests %>
          </tbody>
      <% else %>
        <p><%= t('.no_tests') %></p>
      <% end %>
      </table>
    </div>
  </div>
</div>
